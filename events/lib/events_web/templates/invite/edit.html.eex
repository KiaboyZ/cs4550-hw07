<%= form_for @changeset, Routes.invite_path(@conn, :update, @invite), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= select f, :response, ["Yes", "No", "Maybe"], class: "form-control" %>
    <%= error_tag f, :response %>
  </div>

  <div>
    <%= submit "Update Response", class: "btn btn-primary" %>
  </div>
<% end %>
